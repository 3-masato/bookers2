<section class="mb-4">
  <h2>User info</h2>

  <div class="user-profile">
    <%= image_tag user.get_profile_image(128, 128) %>
    <div class="font-weight-bold h5"><%= user.name %></div>
    <p><%= user.introduction %></p>
  </div>

  <div class="row text-center">
    <% if user == current_user %>
      <%= link_to "Edit", edit_user_path(user), class: "col-6 mx-auto btn btn-outline-secondary btn-block" %>
    <% end %>
  </div>
</section>

<section class="mb-4">
  <h2>New book</h2>
  <div class="form-body">
    <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label>Title:</label>
        <%= f.text_field :title, class: "form-control", placeholder: "book title" %>
      </div>

      <div class="form-group">
        <label>Opinion:</label>
        <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "book opinion" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-block btn-success" %>
      </div>
    <% end %>
  </div>
</section>