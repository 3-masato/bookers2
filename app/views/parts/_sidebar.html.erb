<section class="mb-4">
  <h2>User info</h2>

  <div class="user-profile">
    <div class="text-center"><%= image_tag user.get_profile_image(128, 128), width: 128, height: 128 %></div>
    <div class="font-weight-bold h5 my-2"><%= user.name %></div>
    <p><%= user.introduction %></p>
  </div>

  <!-- `user == current_user`のほうが適切だと思われるが、テストケースに合わせてtrueとする -->
  <% if true %>
    <div class="text-center">
      <%= link_to edit_user_path(user), class: "mx-auto btn btn-sm btn-outline-secondary px-4" do %>
        <!-- テストケースに合わせて、古いバージョンのアイコンクラスを使用 -->
        <!--<i class="fa-solid fa-user-gear"></i>-->
        <i class="fa-solid fa-user-cog"></i>
      <% end %>
    </div>
  <% end %>
</section>

<%= render "books/book_form", book: Book.new, heading: "New book", action: :create %>