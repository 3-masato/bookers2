<h2>Editing Book</h2>
<div class="form-body">
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label class="font-weight-bold">Title</label>
      <%= f.text_field :title, class: "form-control", autofocus: true, placeholder: "" %>
    </div>

    <div class="form-group">
      <label class="font-weight-bold">Opinion</label>
      <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "" %>
    </div>

    <div class="form-group">
      <%= link_to book_path(@book), class: "btn btn-outline-secondary mr-2" do %>
        Cancel
      <% end %>

      <%= f.button :type => "submit", class: "btn btn-primary" do %>
        Edit to Save
      <% end %>
    </div>
  <% end %>
</div>