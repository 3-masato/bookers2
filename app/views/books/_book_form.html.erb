<h2><%= heading %></h2>
<div class="form-body">
  <%= form_with model: book do |f| %>

    <div class="form-group">
      <label class="font-weight-bold">Title</label>
      <%= f.text_field :title, class: "form-control", placeholder: "enter the book title" %>
    </div>

    <div class="form-group">
      <label class="font-weight-bold">Opinion</label>
      <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "enter the book opinion" %>
    </div>

    <% if action == :update %>
      <%= render "parts/form_cancel_and_save", f: f %>
    <% elsif action == :create %>
      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-block btn-success" %>
      </div>
    <% end %>
  <% end %>
</div>